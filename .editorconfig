# editorconfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.gitignore]
end_of_line = unset

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.{html,htm,xhtml,xml}]
indent_size = 2

[*.{css,scss,sass}]
indent_size = 2

[*.{json}]
indent_style = tab

[*.{yml,yaml}]
indent_style = space
indent_size = 2
